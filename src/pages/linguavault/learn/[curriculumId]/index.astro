---
export const prerender = false;

import LinguaVaultLayout from "../../../../layouts/LinguaVaultLayout.astro";
import LVCurriculumView from "../../../../components/linguavault/learning/LVCurriculumView.vue";

const { curriculumId } = Astro.params;
---

<LinguaVaultLayout
    title="Learning - LinguaVault"
    description="Continue your language learning journey"
>
    <!-- Use empty string as fallback to satisfy TS, though Astro router guarantees param presence for this route -->
    <LVCurriculumView curriculumId={curriculumId ?? ""} client:load />
</LinguaVaultLayout>
